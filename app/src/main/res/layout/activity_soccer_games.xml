<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".SoccerGames"
    tools:deviceIds="wear">

    <ListView
        android:id="@+id/theListView"
        android:layout_width="130dp"
        android:layout_height="match_parent">
    </ListView>

    <FrameLayout
        android:id="@+id/fragmentLocation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/theListView" />

    <Button
        android:id="@+id/readBtn"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/theListView"
        android:layout_alignBottom="@id/theListView"
        android:layout_height="wrap_content"
        android:text="@string/read" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/readBtn"
        android:layout_alignBottom="@id/theListView"
        android:layout_height="wrap_content"
        android:text="@string/save" />

    <Button
        android:id="@+id/favoriteBtn"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/saveBtn"
        android:layout_alignBottom="@id/theListView"
        android:layout_height="wrap_content"
        android:text="@string/favorite" />



